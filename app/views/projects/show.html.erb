<div class="card my-3">
  <div class="card-header">
    <h3><%= @project.title %></h3>
    <% if @project.description %>
      <p><%= @project.description %></p>
    <% end %>
    <h5>Status: <%= @project.status %></h5>

  </div>
  <% @project.comments.each do |comment| %>
    <div class="card-body border rounded">
      <h5 class="card-title "><%= comment.body %> @ <%= comment.created_at.strftime("%H:%M") %></h5>
      <br>
    </div>
  <% end %>

  <div class="card-body">
  <%= form_for [@project, @comment] do |f| %>
    <div class="form-group py-3">
      <%= f.label 'Comment' %>
      <%= f.text_field :body, class: "form-control", rows: 3 %>
    </div>

    <div class="form-group mb-0 text-right">
      <%= f.submit 'Send Comment', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>